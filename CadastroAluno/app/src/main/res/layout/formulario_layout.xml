<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="softex.cadastroaluno.FormularioActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/add_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/textView1"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nome"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:hint="Informe o nome do aluno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:id="@+id/textView2"
        android:layout_below="@+id/nome"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/telefone"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:hint="Informe o telefone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site"
        android:id="@+id/textView3"
        android:layout_below="@+id/telefone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/site"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:hint="Informe o site" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:id="@+id/textView4"
        android:layout_below="@+id/site"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:hint="exemplo@gmail.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço"
        android:id="@+id/textView5"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endereco"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:hint="Informe o endereço" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/endereco"
        android:layout_alignParentLeft="true"
        android:textColor="#000" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_salvar_dados"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:text="@string/botao_salvar_dados" />




</RelativeLayout>
